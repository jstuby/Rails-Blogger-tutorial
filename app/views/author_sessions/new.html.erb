<h1>
  Login
</h1>
<%= form_tag author_sessions_path, :method => :post, :class => 'login-form' do %>
  <p>
    <%= label_tag :username %><br />
    <%= text_field_tag :username %>
  </p>
  <p>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </p>
  <p>
    <%= submit_tag 'Login'%>
  </p>
<% end %>
<%= link_to 'Back', articles_path %>
