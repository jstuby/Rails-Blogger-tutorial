<?xml version="1.0" encoding="ISO-8859-1" ?>
<rss version="2.0">

  <channel>
    <title>Blog</title>
    <link>http://www.stubyblog.com</link>
    <description>A blog created in rails for a tutorial</description>
    <% @articles.each do |article| %>
      <item>
        <title><%= article.title %></title>
        <link><%= url_for article_path(article) %></link>
        <description><%= article.body %></description>
      </item>
    <% end %>
  </channel>

</rss>
