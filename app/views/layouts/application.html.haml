!!!
%html
  %head
    %title Blogger
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    #header
      #login
        - if logged_in?
          %span#welcome-message
            = "Welcome, #{current_user.username}"
          = link_to 'logout', logout_path, :class => 'logout'
        - else
          %span#please-login
            Please login
          = link_to 'login', login_path, :class => 'login'
    #flash-area
      %span.flash= flash[:message]
    #sidebar
      = build_navigation
    #content
      = yield
